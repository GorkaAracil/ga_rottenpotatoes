-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{ (@sorted_by == 'title') ? {:class => "hilite"} : {} }= link_to "Movie Title", movies_path(:sortby => 'title'), :id => 'title_header'
      %th Rating
      %th{ (@sorted_by == 'release_date') ? {:class => "hilite"} : {} }= link_to "Release Date", movies_path(:sortby => 'release_date'), :id => 'release_date_header'
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
= label 'label1', 'label2', @sorted_by

